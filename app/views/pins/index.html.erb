<div class="container">
  <div class="row">
    <% @pins.each do |pin| %>
      <div class="col-md-3">
        <div class="thumbnail">     
          <%= pin.name %><br>
          <%= pin.desciption %>
          <%= image_tag(pin.photo, :class=>'img-responsive') %>
            <div class="buttons" style="padding: 10px;">
            <%= link_to 'Show', pin, :class=>'btn btn-default' %>
            <%= link_to 'Edit', edit_pin_path(pin), :class=>'btn btn-default' %>
            <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-default btn-danger', :style=>'color:white' %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
<br>
<%= link_to 'New Pin', new_pin_path %>
</div>